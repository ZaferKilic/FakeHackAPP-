import mysql.connector
from tkinter import messagebox
import os,time
        

while True:
    cnx = mysql.connector.connect(user = 'root', password = 'DATABASE PASSWORD', host='DATABASE IP', database='DATABASE NAME')
    cursor = cnx.cursor()
    query = ("SELECT askupdate, message FROM updater")
    cursor.execute(query)
    for (askupdate,message) in cursor:
        update = askupdate
        messages = message
        if "yesx" in update:
            messagebox.showinfo("",message)
            messagebox.showinfo("","!GOOD BYE!")
            os.system("update /p")

    time.sleep(1)
   


